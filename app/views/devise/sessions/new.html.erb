<div class="container">
  <!-- Outer Row -->
  <div class="row justify-content-center">
    <h2>Five Dimension Pocket</h2>
    <div class="col-xl-10 col-lg-12 col-md-9">
      <div class="card o-hidden border-0 shadow-lg m-3">
        <div class="card-body p-0">
          <!-- Nested Row within Card Body -->
          <div class="row">
            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
            <div class="col-lg-6">
              <div class="p-5">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4">歡迎回來！</h1>
                </div>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:'user') do |f| %>
                  <div class="from-group">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control form-control-user my-3", placeholder: "Enter Email Address..." %>
                  </div>               
                  <div class="from-group">
                    <%= f.password_field :password, autocomplete: "current-password" , class: "form-control form-control-user", placeholder: "Password" %>
                  </div>
                  <div class="from-group mt-3">
                    <%= f.submit "登入", class: "btn btn-primary btn-user btn-block" %>
                  </div>
                <% end %>    
                <hr>
                <%= link_to user_google_oauth2_omniauth_authorize_path, class:'btn btn-google btn-user btn-block' do %>
                  <i class="fab fa-google fa-fw"></i> Login with Google
                <% end %>
                <%= link_to user_facebook_omniauth_authorize_path, class:'btn btn-facebook btn-user btn-block' do %>
                <i class="fab fa-facebook-f fa-fw"></i> Login with Facebook
                <% end %>
                <hr>
                <div class="text-center">
                  <%= link_to 'Create an Account!', new_user_registration_path, class: 'small' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>