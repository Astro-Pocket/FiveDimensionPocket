<div class="container">
  <!-- Outer Row -->
  <div class="row justify-content-center">
    <h2>Five Dimension Pocket</h2>
    <div class="col-xl-10 col-lg-12 col-md-9">
      <div class="card o-hidden border-0 shadow-lg m-3">
        <div class="card-body p-0">
          <!-- Nested Row within Card Body -->
          <div class="row">
            <div class="col-lg-6 d-none d-lg-block bg-register-image"></div>
            <div class="col-lg-6">
              <div class="p-5">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4">註冊</h1>
                </div>
                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>
                  <div class="input-group is-invalid mt-1">
                    <div class="custom-file">
                    <%= f.file_field :avatar, class: "custom-file-input form-control form-control-user" %>
                      <label class="custom-file-label ">請上傳頭貼...</label>
                    </div>  
                  </div>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-user my-3", placeholder: "Enter Email Address..." %>
                  <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control form-control-user my-3", placeholder: "Your Name" %>
                  
                  <div class="from-group mt-1">
                    <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-user my-3", placeholder: "Password" %>
                    <% if @minimum_password_length %>
                      <em class="astro-white">(<%= @minimum_password_length  %> characters minimum)</em>
                    <% end %><br />
                  </div>

                  <div class="from-group mt-1">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-user my-3", placeholder: "Password confirmation" %>
                  </div>

                  <div class="from-group mt-3">
                    <%= f.submit "註冊", class: "btn btn-primary btn-user btn-block" %>
                  </div>
                  <% end %>  
                <hr>
                <div class="text-center">
                  <%= link_to 'Already have an account? Login!', new_user_session_path, class: 'small' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>